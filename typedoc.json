{
    "entryPointStrategy": "expand",
    "entryPoints": ["src/index.ts"],
    "tsconfig": "./tsconfig.build.json",
    "excludeExternals": true,
    "exclude": ["**/node_modules/**"],
    "skipErrorChecking": true,
    "plugin": ["typedoc-plugin-markdown"],
    "readme": "none",
    "outputs": [
        {
            "name": "markdown",
            "path": "./docs/reference",
            "options": {
                "entryFileName": "index",
                "hidePageHeader": true,
                "hideBreadcrumbs": true,
                "hidePageTitle": true,
                "useCodeBlocks": true
            }
        }
    ]
}
