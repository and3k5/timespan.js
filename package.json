{
    "name": "@and3k5/timespan.js",
    "version": "3.0.1-0",
    "description": "Timespan / duration representation in js",
    "main": "dist/cjs/index.js",
    "module": "dist/es/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/es/index.js",
            "require": "./dist/cjs/index.js",
            "types": "./dist/types/index.d.ts"
        }
    },
    "scripts": {
        "test": "npx vitest run",
        "test:lite": "npx vitest -c vitest.node.config.ts run",
        "build": "npm run type-check && npx vite build",
        "lint": "npx eslint src",
        "lint-fix": "npx eslint src --fix",
        "prepare": "npm run build",
        "postversion": "npx bun run read-version.ts --run-command",
        "format": "npx prettier --write .",
        "type-check": "npx run-s type-check:*",
        "type-check:browser": "npx tsc --project ./tsconfig.browser.json --noEmit --skipLibCheck",
        "type-check:node": "npx tsc --project ./tsconfig.node.json --noEmit --skipLibCheck"
    },
    "files": [
        "dist/*",
        "dist/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/and3k5/timespan.js.git"
    },
    "keywords": [
        "timespan",
        "duration",
        "time"
    ],
    "author": "Anders K",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/and3k5/timespan.js/issues"
    },
    "homepage": "https://github.com/and3k5/timespan.js#readme",
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/node": "^24.10.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@vitest/browser-playwright": "^4.0.8",
        "bun": "^1.3.1",
        "eslint": "^9.39.1",
        "jiti": "^2.6.1",
        "npm-run-all2": "^8.0.4",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3",
        "vite": "^7.2.2",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^4.0.8"
    },
    "engines": {
        "node": ">=24.11.0"
    },
    "engineStrict": true,
    "volta": {
        "node": "24.11.0"
    }
}
